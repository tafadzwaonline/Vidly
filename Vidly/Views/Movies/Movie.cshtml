<h2>Movies</h2>

@if (Model.Movie.Count == 0)
{
    <p>There are no available movies.</p>
}
else
{
    <ul>
        @foreach (var item in Model.Movie)
        {

           <li>@Html.ActionLink(item.Name, "Details", "Movies", new { id = 1 }, null)</li>
            
        }

    </ul>
}

